	<section id="nested">
		<h2>Nested grids</h2>

		<ul>
			<li>Grids can be nested infinitely</li>
		</ul>

		{% example "html" -%}
			<div class="grid">
				<div class="grid__item one-half">
					<div class="grid-example-item">
						<div>1/2</div>
						<div class="grid">
							<div class="grid__item one-half">
								<div class="grid-example-item">1/2</div>
							</div>
							<div class="grid__item one-half">
								<div class="grid-example-item">1/2</div>
							</div>
						</div>
					</div>
				</div>
				<div class="grid__item one-half">
					<div class="grid-example-item">
						<div>1/2</div>
						<div class="grid">
							<div class="grid__item one-half">
