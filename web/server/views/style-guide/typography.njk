	</section>

	<section id="links">

		<h2>Links</h2>

		<ul>
			<li>Use <code>rel="external"</code> for external links</li>
		</ul>

		{% example -%}
			<p><a href="#">A link on its own</a></p>
			<p>This is some text with <a href="#" rel="external">an external link inside it</a>.</p>
		{%- endexample %}

	</section>

	<section id="lists">

		<h2>Lists</h2>

		<p>
			Follow the <a href="https://www.nice.org.uk/corporate/ecd1/chapter/punctuation-and-bullet-points#bullet-points" target="_blank" rel="external">bullet points guide lines</a> on the NICE style guide.
		</p>

		<h3>Default lists</h3>

		{% example -%}
			<p>This is an unordered list:</p>
			<ul>
				<li>Item 1</li>
				<li>Item 2</li>
				<li><a href="#">Item 3</a></li>
			</ul>
			<p>This is an ordered list:</p>
			<ol>
				<li><a href="#" target="_blank" rel="external">Item 1</a></li>
				<li>Item 2</li>
				<li>Item 3</li>
			</ul>
		{%- endexample %}

		<h3>Featured lists</h3>

		<ul>
			<li>Use featured lists when you want more impact</li>
			<li>Try to stick to a maximum of 4 items in a featured list</li>
		</ul>

		{% example -%}
			<p>This is a featured list:</p>
			<ul class="list list--featured">
				<li>Item 1</li>
				<li>Item 2</li>
				<li>Item 3</li>
			</ul>
		{%- endexample %}

	</section>

{% endblock %}
