{% if item.link.length > 0 %}
	<div class="grid__item one-whole tablet--one-half desktop--one-third">
		<h5>Links</h5>

		<ul>
			{% for link in item.link %}
			<li>
				<a href="{{ link.url }}">
					{% if link.caption %}
						{{ link.caption }}
					{% else %}
						{{ link.url }}
					{% endif %}
				</a>
			</li>
			{% endfor %}
		</ul>
	</div>
{% endif %}
